<div id="flash">
  <% flash.each do |key, value| -%>
    <% type = :success if key == :notice %>
    <% type = :error   if key == :alert %>

    <div class="alert alert-<%= type %>">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= value %>
    </div>
  <% end -%>
</div>
