<div class="form-group">
  <label for="inputPassword3" class="col-sm-3 control-label">Default Max Value</label>
  <div class="col-sm-9">
    <%= form.number_field :max, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label for="inputPassword3" class="col-sm-3 control-label">Default Suffix</label>
  <div class="col-sm-9">
    <%= form.text_field :suffix, class: "form-control" %>
    <span class="help-block">Example: KM/H</span>
  </div>
</div>
<div class="form-group">
  <label for="inputPassword3" class="col-sm-3 control-label">Default Series</label>
  <div class="col-sm-9">
    <%= form.text_field :series, class: "form-control" %>
    <span class="help-block">Example: [80]</span>
  </div>
</div>
