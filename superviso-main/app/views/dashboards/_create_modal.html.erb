<div class="modal fade" id="create-dashboard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= t "titles.create_new_dashboard" %></h4>
      </div>
      <%= form_for @new_dashboard, url: dashboards_path(), html:{class: "form-horizontal"} do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <label for="dashboard_name" class="col-sm-2 control-label"><%= t "labels.name" %></label>
          <div class="col-sm-10">
            <%= f.text_field :name, placeholder: t("placeholders.dashboard_name"), class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="dashboard_name" class="col-sm-2 control-label"><%= t "labels.start_from_template" %></label>
          <div class="col-sm-10">
            <%= f.select :template,  options_from_collection_for_select(@templates, "id", "name"), {include_blank: true}, {class: 'form-control'} %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "buttons.close "%></button>
        <%= f.submit t("buttons.create"), class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

